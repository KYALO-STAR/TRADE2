# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Deriv API Configuration
DERIV_APP_ID=1089
DERIV_API_URL=wss://ws.binaryws.com/websockets/v3

# Deriv OAuth Configuration (Register at https://developers.deriv.com)
DERIV_CLIENT_ID=your-deriv-oauth-client-id
DERIV_CLIENT_SECRET=your-deriv-oauth-client-secret

# NextAuth Configuration  
NEXTAUTH_SECRET=your-random-secret-change-this-in-production
NEXTAUTH_URL=https://your-app.vercel.app

# OpenAI Configuration (for AI Assistant)
OPENAI_API_KEY=your-openai-api-key-here

# Security & 2FA Configuration
JWT_SECRET=your-jwt-secret-for-additional-security
TOTP_SECRET_KEY=your-totp-secret-for-2fa
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-email-app-password
EMAIL_FROM=noreply@your-trading-app.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/trading_app
REDIS_URL=redis://localhost:6379

# Security Features
RATE_LIMIT_ENABLED=true
DEVICE_VERIFICATION_ENABLED=true
PASSKEY_ENABLED=true
TWO_FACTOR_ENABLED=true

# Webhook Configuration (for real-time updates)
WEBHOOK_SECRET=your-webhook-secret-key

# Add other environment variables as needed